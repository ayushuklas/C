<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:padding="10dp"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/bg_border2">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/coupon_icon"
                android:layout_gravity="center_vertical"
                app:srcCompat="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:id="@+id/coupon_code"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="FIRSTCUBO60"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#d99240"
            android:id="@+id/apply_coupon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:text="APPLY"/>
    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/coupon_title"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:text="Get 60% off on your first order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:id="@+id/coupon_desc"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Use code FIRSTCUBO60 &amp; get 60% off on your first oder."/>
   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="#a4a4a4"/>
    </LinearLayout>
</android.support.v7.widget.CardView>